@page
@model IndexModel
@{
    ViewData["Title"] = "Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h3>@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />

<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

            <div class="form-floating mb-3">
                <input asp-for="Username" class="form-control" disabled />
                <label asp-for="Username"></label>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Bio" class="form-control" />
                <label asp-for="Input.Bio"></label>
                <span asp-validation-for="Input.Bio"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Location" class="form-control" />
                <label asp-for="Input.Location"></label>
                <span asp-validation-for="Input.Location"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.FavoriteGame" class="form-control" />
                <label asp-for="Input.FavoriteGame"></label>
                <span asp-validation-for="Input.FavoriteGame"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Input.ImageFile" class="form-label">Profile Image (optional)</label>
                <input asp-for="Input.ImageFile" type="file" class="form-control" />
            </div>

            <button id="update-profile-button" type="submit" class="btn btn-primary">Save Changes</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
