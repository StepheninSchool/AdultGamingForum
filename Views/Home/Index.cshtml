@model IEnumerable<AdultGamingForum.Models.Discussion>
@{
    ViewData["Title"] = "Recent Discussions";
}

<div class="container my-4">
    <!-- Welcome Section -->
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Welcome to Adult Gaming Forum</h1>
            <p class="lead">
                Check out <a href="https://opencritic.com/" target="_blank">Open Critic</a> for recent reviews.
            </p>
            <a asp-controller="Discussions" asp-action="Create" class="btn btn-primary mb-4">Create New</a>
        </div>
    </div>
    <hr />

    <!-- Discussions List -->
    <div class="list-group">
        @foreach (var discussion in Model)
        {
            <div class="list-group-item d-flex align-items-center">
                <div class="mr-3">
                    @if (!string.IsNullOrEmpty(discussion.ImageFilename))
                    {
                        <img src="~/uploads/@discussion.ImageFilename" alt="@discussion.Title" class="img-thumbnail" style="width:100px; height:100px; object-fit:cover;" />
                    }
                    else
                    {
                        <img src="~/images/placeholder.png" alt="No Image" class="img-thumbnail" style="width:100px; height:100px; object-fit:cover;" />
                    }
                </div>
                <div class="flex-grow-1 ml-3">
                    <h4>
                        <a asp-action="GetDiscussion" asp-route-id="@discussion.DiscussionId" class="text-decoration-none">
                            @discussion.Title
                        </a>
                    </h4>
                    <p class="mb-0">
                        <small class="text-muted">
                            Posted on @discussion.CreateDate.ToString("g") |
                            @discussion.Comments.Count() comment(s)
                        </small>
                    </p>
                </div>
            </div>
        }
    </div>
</div>

<!-- Optional inline style for hover effect -->
<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
</style>
