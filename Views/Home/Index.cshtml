@model IEnumerable<AdultGamingForum.Models.Discussion>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-md-12 text-center my-4">
            <h1 class="display-4">Welcome to Adult Gaming Forum</h1>
            <p class="lead">Learn about <a href="https://learn.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <h2>Recent Posts</h2>
            @if (!Model.Any())
            {
                <p>No posts available. Be the first to post!</p>
            }
            else
            {
                <ul class="list-unstyled">
                    @foreach (var post in Model)
                    {
                        <li class="mb-4">
                            <h3>@post.Title</h3>
                            <p>@post.Content</p>
                            <small class="text-muted">Posted on: @post.CreateDate.ToString("g")</small>
                        </li>
                    }
                </ul>
            }
        </div>
    </div>
</div>