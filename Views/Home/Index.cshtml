@model IEnumerable<AdultGamingForum.Models.Discussion>
@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <!-- Welcome Section -->
    <div class="row">
        <div class="col-12 text-center my-4">
            <h1 class="display-4">Welcome to Adult Gaming Forum</h1>
            <p class="lead">
                Check out <a href="https://opencritic.com/" target="_blank">Open Critic</a> for recent reviews.
            </p>
        </div>
    </div>
    <hr />

    <!-- Recent Posts Section -->
    <div class="row">
        <div class="col-12">
            <h2>Recent Posts</h2>
            @if (!Model.Any())
            {
                <p>No posts available. Be the first to post!</p>
            }
            else
            {
                <div class="row">
                    @foreach (var discussion in Model)
                    {
                        <div class="col-md-4 mb-4">
                            <a asp-controller="Discussions" asp-action="Details" asp-route-id="@discussion.DiscussionId" class="text-decoration-none text-dark">
                                <div class="card shadow-sm h-100">
                                    @if (!string.IsNullOrEmpty(discussion.ImageFilename))
                                    {
                                        <img src="~/uploads/@discussion.ImageFilename" class="card-img-top" alt="@discussion.Title" style="max-height:200px; object-fit:cover;" />
                                    }
                                    <div class="card-body">
                                        <h5 class="card-title">@discussion.Title</h5>
                                        <p class="card-text">
                                            @if (discussion.Content.Length > 100)
                                            {
                                                @(discussion.Content.Substring(0, 100) + "...")
                                            }
                                            else
                                            {
                                                @discussion.Content
                                            }
                                        </p>
                                    </div>
                                    <div class="card-footer">
                                        <small class="text-muted">Posted on: @discussion.CreateDate.ToString("g")</small>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>
            }
        </div>
    </div>
</div>

<style>
    /* Hover effect for clickable cards */
    a.text-decoration-none:hover .card {
        transform: translateY(-5px);
        transition: transform 0.2s ease;
    }
</style>
