@model AdultGamingForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
}

<div class="container my-4">
    <!-- Discussion Header -->
    <div class="card shadow-sm p-4">
        <h1 class="text-center">@Model.Title</h1>
        <p class="text-center text-muted">
            Posted on @Model.CreateDate.ToString("g") | @Model.Comments.Count() comment(s)
        </p>

        @if (!string.IsNullOrEmpty(Model.ImageFilename))
        {
            <div class="text-center mb-4">
                <img src="~/images/@Model.ImageFilename" alt="@Model.Title" class="img-fluid rounded shadow-sm" style="max-width: 60%; height: auto; border: 2px solid #ddd; padding: 5px;" />
            </div>
        }

        <p class="lead">@Model.Content</p>
    </div>

    <!-- Add Comment Button -->
    <div class="text-end my-4">
        <a asp-controller="Comments" asp-action="Create" asp-route-discussionId="@Model.DiscussionId" class="btn btn-success btn-lg">
            <i class="bi bi-chat-left-dots"></i> Add Comment
        </a>
    </div>

    <hr />

    <!-- Comments Section -->
    <div class="mt-4">
        <h3 class="border-bottom pb-2 mb-3">Comments</h3>

        @if (!Model.Comments.Any())
        {
            <div class="alert alert-info text-center" role="alert">
                No comments yet. Be the first to comment!
            </div>
        }
        else
        {
            <div class="list-group">
                @foreach (var comment in Model.Comments.OrderByDescending(c => c.CreateDate))
                {
                    <div class="list-group-item shadow-sm p-3">
                        <p class="mb-1">@comment.Content</p>
                        <p class="text-end text-muted"><small>Posted on: @comment.CreateDate.ToString("g")</small></p>
                    </div>
                }
            </div>
        }
    </div>

    <!-- Back to Discussions Button -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-secondary btn-lg">
            <i class="bi bi-arrow-left-circle"></i> Back to Discussions
        </a>
    </div>
</div>

<!-- Optional Bootstrap Icons (if needed) -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
