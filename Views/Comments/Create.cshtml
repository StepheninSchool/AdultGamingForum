@model AdultGamingForum.Models.Comment

@{
    ViewData["Title"] = "Add Comment";
}

<h1>Add Comment</h1>

<!-- Form to submit a new comment -->
<form asp-action="Create" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    
    <!-- Hidden field to store the Discussion ID -->
    <input type="hidden" asp-for="DiscussionId" value="@ViewBag.DiscussionId" />
    
    <div class="form-group">
        <label asp-for="Content" class="control-label"></label>
        <!-- Use a multi-line textarea for the comment text -->
        <textarea asp-for="Content" class="form-control" rows="5"></textarea>
        <span asp-validation-for="Content" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <input type="submit" value="Submit Comment" class="btn btn-primary" />
    </div>
</form>

<div>
    <!-- Link back to the Discussion details page -->
    <a asp-action="Details" asp-controller="Discussions" asp-route-id="@ViewBag.DiscussionId">Back to Discussion</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}