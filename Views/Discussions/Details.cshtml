@model AdultGamingForum.Models.Discussion

@{
    ViewData["Title"] = "Discussion Details";
    // Sort comments descending by CreateDate
    var sortedComments = Model.Comments.OrderByDescending(c => c.CreateDate);
}

<h1>Discussion Details</h1>

<div class="mb-4">
    <h2>@Model.Title</h2>
    <p>@Model.Content</p>
    <small class="text-muted">Created on: @Model.CreateDate.ToString("g")</small>
</div>

@if (!string.IsNullOrEmpty(Model.ImageFilename))
{
    <div class="mb-4">
        <img src="~/uploads/@Model.ImageFilename" alt="Discussion image" class="img-fluid" style="max-width:400px;" />
    </div>
}

<!-- Link to add a new comment -->
<div class="mb-3">
    <a asp-controller="Comments" asp-action="Create" asp-route-discussionId="@Model.DiscussionId" class="btn btn-success">
        Add Comment
    </a>
</div>

<h3>Comments</h3>

@if (!sortedComments.Any())
{
    <p>No comments yet. Be the first to comment!</p>
}
else
{
    @foreach (var comment in sortedComments)
    {
        <div class="card mb-3">
            <div class="card-body">
                <p class="card-text">@comment.Content</p>
                <p class="card-text"><small class="text-muted">Posted on @comment.CreateDate.ToString("g")</small></p>
            </div>
        </div>
    }
}

<div class="mt-4">
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>
