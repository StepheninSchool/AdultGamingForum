@model IEnumerable<AdultGamingForum.Models.Discussion>

@{
    ViewData["Title"] = "Recent Posts";
}

<div class="container my-4">
    <div class="text-center mb-4">
        <h1 class="display-4">Recent Posts</h1>
        <p class="lead">Browse discussions and share your thoughts.</p>
        <a asp-action="Create" class="btn btn-primary btn-lg">Create New</a>
    </div>

    <div class="list-group">
        @foreach (var item in Model)
        {
            <div class="list-group-item list-group-item-action flex-column align-items-start p-3 shadow-sm rounded mb-3">
                <div class="d-flex justify-content-between align-items-center">
                    <h5 class="mb-1">@item.Title</h5>
                    <small class="text-muted">@item.CreateDate.ToString("g")</small>
                </div>

                <p class="mb-2 text-muted">
                    @if (item.Content.Length > 100)
                    {
                        @(item.Content.Substring(0, 100) + "...")
                    }
                    else
                    {
                        @item.Content
                    }
                </p>

                @if (!string.IsNullOrEmpty(item.ImageFilename))
                {
                    <img src="~/images/@item.ImageFilename" alt="Discussion Image" class="img-fluid mt-3" style="max-width: 50%; height: auto;" />
                }


                <div class="d-flex justify-content-between">
                    <a asp-action="Details" asp-route-id="@item.DiscussionId" class="btn btn-outline-primary btn-sm">
                        View Discussion
                    </a>

                    <div>
                        <a asp-action="Edit" asp-route-id="@item.DiscussionId" class="btn btn-warning btn-sm mx-1">Edit</a>
                        <a asp-action="Delete" asp-route-id="@item.DiscussionId" class="btn btn-danger btn-sm">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<!-- Optional inline CSS for hover effect -->
<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
</style>
