@model IEnumerable<AdultGamingForum.Models.Discussion>
@{
    ViewData["Title"] = "Recent Posts";
}

<div class="container my-4">
    <div class="row">
        <div class="col-12 text-center">
            <h1 class="display-4">Recent Posts</h1>
            <p class="lead">Browse discussions and share your thoughts.</p>
            <a asp-action="Create" class="btn btn-primary mb-4">Create New</a>
        </div>
    </div>
    <div class="list-group">
        @foreach (var item in Model)
        {
            <a asp-action="Details" asp-route-id="@item.DiscussionId" class="list-group-item list-group-item-action flex-column align-items-start">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1">@item.Title</h5>
                    <small>@item.CreateDate.ToString("g")</small>
                </div>
                <p class="mb-1">
                    @if(item.Content.Length > 100)
                    {
                        @(item.Content.Substring(0, 100) + "...")
                    }
                    else
                    {
                        @item.Content
                    }
                </p>
                @if (!string.IsNullOrEmpty(item.ImageFilename))
                {
                    <img src="~/uploads/@item.ImageFilename" alt="@item.Title" class="img-fluid mt-2" style="max-height:150px; object-fit:cover;" />
                }
            </a>
        }
    </div>
</div>

<!-- Optional inline CSS for hover effect -->
<style>
    .list-group-item:hover {
        background-color: #f8f9fa;
        transition: background-color 0.2s ease;
    }
</style>