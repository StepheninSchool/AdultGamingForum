@model AdultGamingForum.Models.Discussion

@{
    ViewData["Title"] = "Create Discussion";
}

<div class="container my-4">
    <h1 class="text-center mb-4">Create Discussion</h1>

    <div class="card p-4 shadow-sm">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Discussion Title -->
            <div class="mb-3">
                <label asp-for="Title" class="form-label fw-bold">Title</label>
                <input asp-for="Title" class="form-control" placeholder="Enter discussion title">
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>

            <!-- Discussion Content (TinyMCE Applied Globally) -->
            <div class="mb-3">
                <label asp-for="Content" class="form-label fw-bold">Content</label>
                <textarea asp-for="Content" class="form-control"></textarea>
                <span asp-validation-for="Content" class="text-danger"></span>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label class="form-label fw-bold">Upload Image</label>
                <input type="file" name="ImageFile" class="form-control">
            </div>

            <!-- Submit Button -->
            <div class="text-end">
                <button type="submit" class="btn btn-primary">
                    <i class="fa-solid fa-plus"></i> Create
                </button>
            </div>
        </form>
    </div>

    <!-- Back to Discussions -->
    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fa-solid fa-arrow-left"></i> Back to Discussions
        </a>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
